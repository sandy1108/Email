<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/plugin_background_title"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="邮箱"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/image_break"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:src="@drawable/plugin_email_title_back_pressed" />


        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            >
            
        <ImageView
            android:id="@+id/image_create"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/plugin_email_create"
            android:visibility="visible"
            android:clickable="true"
             />

        <TextView
            android:id="@+id/tv_relay"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:gravity="center_vertical|center_horizontal"
            android:drawableLeft="@drawable/image_reply"
            android:visibility="gone"
             />
        <TextView
            android:id="@+id/tv_send"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:gravity="center_vertical|center_horizontal"
     		android:drawableLeft="@drawable/image_send"
            android:visibility="gone"
             />
         </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/plugin_email_title_bottom_back" />

</LinearLayout>